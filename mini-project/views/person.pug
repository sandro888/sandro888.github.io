doctype html
head
    title people List
    style
        include style.css
      

body
    table
        tr
            th id
            th name
            th surname
            th date
            th disbale
                
            
        for your in people
            tr
                td
                    a(href=`http://localhost:3000/person/${your.id}`)= your.id
                td= your.name
                td= your.surname
                td= your.date
                td
                    button(type="submit" class="button" id="disable") disable      
                
